case $build_os in
*cygwin*)
    DEBUG_CFLAGS="-O0 -Wall -pedantic -fexceptions -g"
    DEBUG_LDFLAGS="-Wl,--no-whole-archive"
    PROFILE_CFLAGS="-g -p"
    REL_CFLAGS="-O3 -ffast-math -fexceptions"
    REL_LDFLAGS="-Wl,-s,--no-whole-archive"
;;
*)
    DEBUG_CFLAGS="-O0 -Wall -pedantic -fexceptions -g"
    DEBUG_LDFLAGS="-Wl,--no-whole-archive"
    PROFILE_CFLAGS="-g -p"
    REL_CFLAGS="-O3 -ffast-math -fexceptions"
    REL_LDFLAGS="-Wl,-s,--no-whole-archive"
    ;;
esac
